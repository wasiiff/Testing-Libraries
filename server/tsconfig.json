{
  "compilerOptions": {
    /* Language & Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],

    /* File Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Type Checking */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Fix type resolution issues */
    "moduleResolution": "node",
    "types": ["node", "jest"]  // include jest if youâ€™re writing tests
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
